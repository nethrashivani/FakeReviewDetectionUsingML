{
  "manifest_version": 3,
  "name": "Product Trust Analyzer",
  "description": "Analyzes product reviews and warns about low-quality or fake products.",
  "version": "0.1.0",

  "permissions": ["activeTab", "storage", "scripting"],

  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
